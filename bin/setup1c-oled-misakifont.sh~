#!/bin/sh -x
#

BINDIR=${HOME}/bin

PKGS="python3-dev python3-venv"
PIP_PKG="rpi.gpio textwrap mojimoji"

MYDIR=`dirname $0`
CONFIG_FILE=${MYDIR}/config.sh

if [ -f ${CONFIG_FILE} ]; then
	. ${CONFIG_FILE}
else
	echo "${CONFIG_FILE}: not found"
	exit 1
fi

sudo apt update
sudo apt -y upgrade
sudo apt -y install ${PKGS}

cd
git clone https://github.com/ytani01/speak.git

if [ ! -d ${BINDIR} ]; then
    mkdir ${BINDIR}
fi

cd speak
cp -f *.sh *.py ${BINDIR}
